<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
	android:background="#FFFFFF"
    android:layout_height="match_parent">
	
		<ProgressBar
		style="?android:attr/progressBarStyle"
		android:layout_width="200dp"
		android:layout_height="50dp"
		android:layout_marginTop="400dp"
		android:layout_centerHorizontal="true"
		android:id="@+id/progressBar1"
		android:indeterminate="true" />
	<TextView
		android:gravity="center_horizontal"
		android:layout_marginTop="25dp"
		android:text="Selecione uma Companhia de Energia"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="30px"
		android:id="@+id/selecione" />
	<Spinner
		android:layout_width="350dp"
		android:layout_height="80dp"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_marginBottom="56.0dp"
		android:layout_marginTop="40dp"
		android:layout_centerHorizontal="true"
		android:gravity="center_horizontal"
		android:spinnerMode="dialog"
		android:id="@+id/drop_companhias_energia" />
	<TextView
		android:gravity="center_horizontal"
		android:layout_marginTop="140dp"
		android:text="Selecione o Tipo de Tarifa"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="30px"
		android:id="@+id/selecionetipo" />
		
		<Spinner
		android:layout_width="350dp"
		android:layout_height="80dp"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_marginBottom="56.0dp"
		android:layout_marginTop="160dp"
		android:layout_centerHorizontal="true"
		android:gravity="center_horizontal"
		android:spinnerMode="dialog"	
		android:id="@+id/drop_tarifas" />
	<TextView
		android:textColor="#ff0000"
		android:layout_marginTop="280dp"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="60px"
		android:paddingLeft="20dp"
		android:id="@+id/tarifa" />
	<TextView
		android:textColor="#ff0000"
		android:layout_marginTop="340dp"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="50px"
		android:paddingLeft="20dp"
		android:id="@+id/branca1" />
	<TextView
		android:textColor="#ff0000"
		android:layout_marginTop="370dp"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="50px"
		android:paddingLeft="20dp"
		android:id="@+id/branca2" />
	<TextView	
		android:textColor="#ff0000"
		android:paddingLeft="20dp"
		android:layout_marginTop="400dp"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="50px"
		android:id="@+id/branca3" />
	<TextView
		android:layout_marginTop="480dp"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/txtPosto" />
