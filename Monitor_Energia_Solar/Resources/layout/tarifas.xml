<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">
<ScrollView
    android:layout_above="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">


     <TextView
		android:gravity="center_horizontal"
		android:layout_marginTop="25dp"
		android:text="Selecione uma Companhia de Energia"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="30px"
		android:id="@+id/selecione" />
	<Spinner
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minWidth="25px"
		android:minHeight="25px"
		android:layout_marginTop="20dp"
		android:layout_centerHorizontal="true"
		android:gravity="center_horizontal"
		android:spinnerMode="dialog"
		android:id="@+id/drop_companhias_energia" />
	<TextView
		android:gravity="center_horizontal"
		android:layout_marginTop="30dp"
		android:text="Selecione o Tipo de Tarifa"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="30px"
		android:id="@+id/selecionetipo" />
		
	<Spinner
		android:gravity="center_horizontal"
		android:layout_marginTop="25dp"
		android:text="Selecione uma Companhia de Energia"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="30px"
		android:id="@+id/drop_tarifas" />
	
	<EditText
        android:id="@+id/editTexttarifa"
        android:layout_marginTop="40px"
		android:layout_width="match_parent"  
		android:layout_height="50dp"  
		android:hint="KWh consumidos" 
		android:background="@layout/rounded_border_edittext"  
		android:padding="15dp"
		android:focusable="false"
		android:layout_marginBottom="10dp"
		android:layout_gravity="center"/>

	<TextView
		android:textColor="#ff0000"
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/txtTotalKwh" />

	<TextView
		android:textColor="#ff0000"
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/txttarifa" />

	
	<TextView
		android:textColor="#ff0000"
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/branca1" />
	<TextView
		android:textColor="#ff0000"
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/branca2" />
	<TextView	
		android:textColor="#ff0000"
		android:paddingLeft="20dp"
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:id="@+id/branca3" />
	<TextView
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/txtPosto" />
	<TextView
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/txtSubgrupo" />
	<TextView
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/txtModalidade" />
	<TextView
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/txtClasse" />
	<TextView
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/txtSubClasse" />
	<TextView
		android:layout_marginTop="40px"
		android:text=""
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="40px"
		android:paddingLeft="20dp"
		android:id="@+id/txtValidade" />
	<TextView
		android:layout_marginTop="40px"
		android:layout_marginBottom="300px"
		android:text="* PIS, Cofins, Custeio do Serviço de Iluminação Pública (CIP), e ICMS não estão inclusos no valor da tarifa"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textSize="25px"
		android:paddingLeft="20dp"
		android:id="@+id/observacao" />
    </LinearLayout>
</ScrollView>
  <Button
            android:id="@+id/calcular"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Obter dados Energia / Calcular"
			android:background="#ffbc01"
            android:layout_alignParentBottom="true"
			android:textStyle="bold"/>
</RelativeLayout>